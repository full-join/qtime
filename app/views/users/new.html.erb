<div class="title is-3">New User</div>
<%= form_with scope: :user, url:users_path, local: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :username, class: "label" %>
    <div class="control">
      <%= f.text_field :username, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control">
      <%= f.email_field :email, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input' %>
    </div>
  </div>
  <div>
    <%= f.submit class: "button is-primary" %>
  </div>
<% end %>