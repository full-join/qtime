<h1 class="title is-3">Create A New User</h1>
<%= form_with class: "new-user", scope: :user, url:users_path, local: true do |f| %>
<fieldset>
  <legend>New User</legend>
  <p>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input" %>
  </p>
  <p>
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input" %>
  </p>
  <p>
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input' %>
  </p>
  <p>
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, class: 'input' %>
  </p>
    <p class="submit-button">
      <button type="submit" name="commit" value="Create Account" class="btn btn-primary" data-disable-with="Create Account">Create Account</button>
    </p>

<% end %>