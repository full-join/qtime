<% provide(:title, "Log in") %>
<h1 class="title">Log in</h1>

<div class="columns">
  <div class="column">
    <%= form_for(:sessions, url: login_path) do |f| %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class="control">
          <%= f.email_field :email, class: 'input' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <div class="control">
          <%= f.password_field :password, class: 'input' %>
        </div>
      </div>
      <%= f.submit "Log in", class: "button is-primary" %>
    <% end %>
  </div>
</div>